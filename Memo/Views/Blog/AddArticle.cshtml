@model BlogArticle
@{
    ViewBag.Title = "AddArticle";
}

<h2>添加博客</h2>
@*<form action="/Blog/ArticleSave" method="post">*@
@using (Html.BeginForm("ArticleSave", "Blog"))
{
    @Html.ValidationSummary()

    <table class="table table-bordered">
        <tr>@*第一行*@ 
            <td>博客标题:</td>
          @*<td><input type="text" name="subject" value="" /></td> @*第二列*@ 
            <td>
                @Html.TextBoxFor(o=>o.Subject)
                @Html.ValidationMessageFor(o=>o.Subject)
            </td>
        </tr>
        <tr>
            <td>添加内容:</td>
            @*<td><textarea name="body" class="form-control"  cols="60" rows="4"></textarea></td>*@
            <td>
                @Html.TextAreaFor(o => o.Body, new { style = "width:500px;max-width:1000px;" })
                @Html.ValidationMessageFor(o => o.Body)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <button type="submit" class="btn btn-primary">保存</button>
                <button type="reset" class="btn btn-warning">取消</button>
            </td>
        </tr>
    </table>
}
@*</form>*@


