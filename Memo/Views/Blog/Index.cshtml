
@{
    ViewBag.Title = "Index";
    var articles = ViewBag.BlogArticles as List<BlogArticle>;
}

<h2>博客</h2>

<fieldset>
    <form method="get"  action="@Url.Action("Index")"> 搜索: 
        <input type="text" class="form-control" placeholder="键入搜索关键字" name="a" value="@ViewBag.a" /><input type="submit" class="btn btn-default" name="a" value="搜索"/>
    </form>
</fieldset>

<ol>
    @foreach (var item in articles)
    {
        <li>
            @Html.ActionLink("[  编辑  ]", "Edit", new { id = item.Id }) |
            @Html.ActionLink("[  删除  ]", "Delete", new { id = item.Id }) |
            <a href="~/Blog/Show/@item.Id">@item.Subject</a>         
        </li>
    }
</ol>
